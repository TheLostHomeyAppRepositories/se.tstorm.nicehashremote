  "name": {
    "en": "NiceHash Remote"
  },
  "brandColor": "#128EDE",
  "description": {
    "en": "Monitor and control your NiceHash rigs"
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.jpg",
    "large": "/assets/images/large.jpg",
    "xlarge": "/assets/images/xlarge.jpg"
  },
  "author": {
    "name": "Theodor Storm"
  },
  "api": {
    "init": {
      "method": "GET",
      "path": "/init"
    }
  },
  "flow": {
    "triggers": [
      {
        "title": {
          "en": "Rig status changed"
        },
        "hint": {
          "en": "Triggered when a rig changes status."
        },
        "tokens": [
          {
            "name": "name",
            "type": "string",
            "title": {
              "en": "Rig Name"
            },
            "example": {
              "en": "MyRig"
            }
          },
          {
            "name": "status",
            "type": "string",
            "title": {
              "en": "Status"
            },
            "example": {
              "en": "MINING"
            }
          }
        ],
        "id": "rig_status_changed"
      },
      {
        "title": {
          "en": "Bitcoin rate changed"
        },
        "hint": {
          "en": "Triggered whenever the BitCoin rate changes by X% (Gilfoyle threshold)"
        },
        "tokens": [
          {
            "name": "btc_rate",
            "type": "number",
            "title": {
              "en": "BTC Price"
            },
            "example": {
              "en": "29000"
            }
          },
          {
            "name": "btc_rate_old",
            "type": "number",
            "title": {
              "en": "Old BTC Price"
            },
            "example": {
              "en": "50000"
            }
          },
          {
            "name": "currency",
            "type": "string",
            "title": {
              "en": "Currency"
            },
            "example": {
              "en": "USD"
            }
          },
          {
            "name": "pct_change",
            "type": "number",
            "title": {
              "en": "% Price Change"
            },
            "example": {
              "en": "-42%"
            }
          }
        ],
        "id": "you_suffer"
      },
      {
        "id": "status_changed",
        "title": {
          "en": "Status changed"
        },
        "tokens": [
          {
            "name": "status",
            "type": "string",
            "title": {
              "en": "Status"
            },
            "example": {
              "en": "MINING"
            }
          }
        ],
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=nicehash-rig"
          }
        ]
      }
    ],
    "actions": [
      {
        "title": {
          "en": "Set power tariff"
        },
        "titleFormatted": {
          "en": "Set power tariff to [[tariff]]"
        },
        "highlight": true,
        "args": [
          {
            "name": "tariff",
            "type": "number",
            "placeholder": {
              "en": "Tariff per kWh"
            }
          }
        ],
        "id": "set_tariff_power"
      },
      {
        "title": {
          "en": "Set power tariff currency"
        },
        "titleFormatted": {
          "en": "Set power tariff currency to [[tariff_currency]]"
        },
        "highlight": true,
        "args": [
          {
            "name": "tariff_currency",
            "type": "text",
            "placeholder": {
              "en": "USD"
            }
          }
        ],
        "id": "set_tariff_power_currency"
      },
      {
        "id": "set_power_mode",
        "title": {
          "en": "Set Power mode"
        },
        "titleFormatted": {
          "en": "Set Power mode to [[power_mode]]"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=nicehash-rig"
          },
          {
            "type": "dropdown",
            "name": "power_mode",
            "title": {
              "en": "Power mode"
            },
            "values": [
              {
                "id": "LOW",
                "label": {
                  "en": "Low"
                }
              },
              {
                "id": "MEDIUM",
                "label": {
                  "en": "Medium"
                }
              },
              {
                "id": "HIGH",
                "label": {
                  "en": "High"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "set_smart_mode",
        "title": {
          "en": "Set Autopilot"
        },
        "titleFormatted": {
          "en": "Set Autopilot [[smart_mode]]"
        },
        "highlight": true,
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=nicehash-rig"
          },
          {
            "type": "checkbox",
            "name": "smart_mode"
          }
        ]
      },
      {
        "id": "set_smart_mode_min_profitability",
        "title": {
          "en": "Set Autopilot Min Profitability"
        },
        "titleFormatted": {
          "en": "Set Autopilot Min Profitability [[smart_mode_min_profitability]]"
        },
        "highlight": true,
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=nicehash-rig"
          },
          {
            "type": "range",
            "name": "smart_mode_min_profitability",
            "min": 0,
            "max": 100,
            "step": 1,
            "label": "%",
            "title": {
              "en": "Net profitability"
            }
          }
        ]
      }
    ]
  },
